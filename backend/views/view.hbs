{{!-- how to get each folder name to appear --}}
<div class="entry">
    <h1>{{viewFolder}} LifeFolder</h1>

    <a href="/lm/view/:name/newLMSF/" class="btn">New Sub Folder</a>
    {{!-- {{log subdata}} --}}

<ul class="list-group">
    {{#each viewFolder}}


        <li class="list-group-item d-flex justify-content-between">

<div>
    {{LifeFolder.subFolder}}
        {{!-- {{log LifeFolder.subFolder.name}} --}}

</div>

<div class="links">
    
    <a href="/lm/view/edit/{{this.id}}" class="btn">Edit</a>

<form action="/lm/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
    <input type="submit" value="Delete" class="btn btn-danger"/>
</form>

</div>
</li>
{{/each}}
</ul>
</div>